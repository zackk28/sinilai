<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0"
    style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sinilai.controller.KhsController">
    <top>
        <AnchorPane prefHeight="70.0" prefWidth="1920.0"
            style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;"
            BorderPane.alignment="CENTER">
            <children>
                <!-- User Profile Area in Header -->
                <HBox alignment="CENTER_RIGHT" layoutX="1400.0" layoutY="25.0" spacing="15.0" />

                <!-- Logo Area -->
                <Label alignment="CENTER_LEFT" layoutX="45.0" layoutY="19.0" prefHeight="32.0"
                    prefWidth="200.0" text="SINILAI" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label fx:id="namaMahasiswaLabel" layoutX="1663.0" layoutY="22.0"
                    text="Nama Mahasiswa" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <ChoiceBox fx:id="choiceBox" layoutX="1846.0" layoutY="18.0" prefHeight="35.0"
                    prefWidth="60.0"
                    style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />
            </children>
        </AnchorPane>
    </top>
    <left>
        <AnchorPane prefHeight="960.0" prefWidth="280.0"
            style="-fx-background-color: #FAFBFC; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;"
            BorderPane.alignment="CENTER">

            <children>

                <!-- Profil User -->
                <VBox alignment="CENTER" layoutX="40.0" layoutY="40.0" spacing="15.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0"
                            style="-fx-background-color: #E8E8E8; -fx-background-radius: 10;">
                            <children>
                                <FontAwesomeIconView fill="#AAAAAA" glyphName="USERS" size="40" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Navigasi -->
                <VBox layoutX="25.0" layoutY="180.0" prefWidth="230.0" spacing="8.0">
                    <children>

                        <!-- Tombol Home -->
                        <Button fx:id="homeButton" alignment="CENTER_LEFT" graphicTextGap="15.0"
                            prefHeight="50.0" prefWidth="230.0"
                            style="-fx-background-color: transparent;" text="Home"
                            textFill="#666666">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="#666666" glyphName="HOME" size="18" />
                            </graphic>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>

                        <!-- Tombol Profil -->
                        <Button fx:id="profilButton" alignment="CENTER_LEFT" graphicTextGap="15.0"
                            prefHeight="50.0" prefWidth="230.0"
                            style="-fx-background-color: transparent;" text="Profil"
                            textFill="#666666">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="#666666" glyphName="USER" size="18" />
                            </graphic>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>

                        <!-- Tombol KHS (aktif) -->
                        <Button fx:id="khsButton" alignment="CENTER_LEFT" graphicTextGap="15.0"
                            prefHeight="50.0" prefWidth="230.0"
                            style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"
                            text="KHS" textFill="#666666">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="#666666" glyphName="GRADUATION_CAP"
                                    size="18" />
                            </graphic>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>

                        <!-- Tombol Setting -->
                        <Button fx:id="settingButton" alignment="CENTER_LEFT" graphicTextGap="15.0"
                            prefHeight="50.0" prefWidth="230.0"
                            style="-fx-background-color: transparent;" text="Setting"
                            textFill="#666666">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="#666666" glyphName="COG" size="18" />
                            </graphic>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>

                    </children>
                </VBox>

                <!-- Ilustrasi Edukasi -->
                <VBox alignment="CENTER" layoutX="25.0" layoutY="450.0" prefWidth="230.0"
                    spacing="10.0"
                    style="-fx-background-color: #F0F7FF; -fx-background-radius: 15; -fx-padding: 20;">
                    <children>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <FontAwesomeIconView fill="#4A90E2" glyphName="BOOK" size="35" />
                                <FontAwesomeIconView fill="#FF9500" glyphName="GRADUATION_CAP"
                                    size="30" />
                            </children>
                        </HBox>
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <FontAwesomeIconView fill="#4A90E2" glyphName="CHART_LINE" size="25" />
                                <FontAwesomeIconView fill="#FF9500" glyphName="TROPHY" size="28" />
                            </children>
                        </VBox>
                        <FontAwesomeIconView fill="#4A90E2" glyphName="STAR" size="20" />
                    </children>
                </VBox>

                <!-- Tombol Logout -->
                <Button fx:id="logoutButton" alignment="CENTER_LEFT" graphicTextGap="12.0"
                    layoutX="25.0" layoutY="880.0" onAction="#handleLogout" prefHeight="45.0"
                    prefWidth="180.0" style="-fx-background-color: transparent;" text="Logout"
                    textFill="#999999">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="#999999" glyphName="SIGN_OUT" size="16" />
                    </graphic>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>

            </children>
        </AnchorPane>
    </left>

    <center>
        <Pane prefHeight="960.0" prefWidth="1340.0" style="-fx-background-color: #F5F5F5;"
            BorderPane.alignment="CENTER">
            <children>
                <!-- KHS Header -->
                <VBox layoutX="50.0" layoutY="40.0" spacing="8.0">
                    <children>
                        <Label text="Kartu Hasil Studi" textFill="#333333">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <Label fx:id="namaKhsLabel" text="Zulfa Sahida" textFill="#666666">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Data Nilai Section -->
                <VBox layoutX="50.0" layoutY="150.0" prefHeight="600.0" prefWidth="1200.0"
                    spacing="25.0">
                    <children>
                        <!-- Section Header with Blue Background -->
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1200.0"
                            style="-fx-background-color: #4A90E2; -fx-background-radius: 12 12 0 0; -fx-padding: 15;">
                            <children>
                                <FontAwesomeIconView fill="WHITE" glyphName="TABLE" size="20" />
                                <Label text="Daftar Nilai  Matakuliah" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>

                        <!-- Table Container -->
                        <VBox prefHeight="450.0" prefWidth="1200.0"
                            style="-fx-background-color: #FFFFFF; -fx-background-radius: 0 0 12 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 1 1; -fx-border-radius: 0 0 12 12;">
                            <children>
                                <!-- Table -->
                                <TableView fx:id="khsTableView" prefHeight="450.0"
                                    prefWidth="1200.0"
                                    style="-fx-background-color: transparent; -fx-table-cell-border-color: #E0E0E0;">
                                    <columns>
                                        <TableColumn fx:id="kodeColumn" prefWidth="120.0"
                                            text="Kode" />
                                        <TableColumn fx:id="namaMataKuliahColumn" prefWidth="300.0"
                                            text="Nama Mata Kuliah" />
                                        <TableColumn fx:id="sksColumn" prefWidth="80.0" text="SKS" />
                                        <TableColumn fx:id="nilaiMutuColumn" prefWidth="120.0"
                                            text="Nilai Mutu" />
                                        <TableColumn fx:id="nilaiHurufColumn" prefWidth="120.0"
                                            text="Nilai Huruf" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Search Section -->
                <VBox layoutX="50.0" layoutY="780.0" spacing="15.0">
                    <children>
                        <Label text="Cari Berdasarkan Tahun Ajaran" textFill="#333333">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <ChoiceBox fx:id="tahunAjaranChoiceBox" prefHeight="40.0"
                                    prefWidth="200.0"
                                    style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;">
                                </ChoiceBox>

                                <Button fx:id="searchButton" onAction="#handleSearch"
                                    prefHeight="40.0" prefWidth="100.0"
                                    style="-fx-background-color: #4A90E2; -fx-background-radius: 8; -fx-text-fill: white;"
                                    text="Search">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Summary Cards -->
                <HBox layoutX="800.0" layoutY="780.0" spacing="20.0">
                    <children>
                        <!-- Total SKS Card -->
                        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="150.0"
                            style="-fx-background-color: #FF9500; -fx-background-radius: 10; -fx-padding: 15;">
                            <children>
                                <Label text="Total SKS" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="totalSksLabel" text="22" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- IP Semester Card -->
                        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="150.0"
                            style="-fx-background-color: #28A745; -fx-background-radius: 10; -fx-padding: 15;">
                            <children>
                                <Label text="IP Semester" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="ipSemesterLabel" text="3.45" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

            </children>
        </Pane>
    </center>
</BorderPane>
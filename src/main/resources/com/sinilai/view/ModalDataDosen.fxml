<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="650.0" spacing="25.0"
    style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-padding: 30;"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.sinilai.controller.ModalDataDosenController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <children>
            <FontAwesomeIconView fill="#4CAF50" glyphName="USER_PLUS" size="32" />
            <Label text="Lengkapi Data Diri Dosen" textFill="#333333">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </children>
    </HBox>

    <!-- Form Fields -->
    <VBox spacing="20.0">
        <children>
            <!-- Row 1: NIDN dan Tempat Lahir -->
            <HBox spacing="20.0">
                <children>
                    <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="NIDN *" textFill="#333333">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Label>
                            <TextField fx:id="nidnField" prefHeight="40.0"
                                promptText="Masukkan NIDN (10 digit angka)"
                                style="-fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12; -fx-font-size: 14px;"
                                maxWidth="Infinity" />
                        </children>
                    </VBox>

                    <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Tempat Lahir *" textFill="#333333">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Label>
                            <TextField fx:id="tempatLahirField" prefHeight="40.0"
                                promptText="Masukkan tempat lahir"
                                style="-fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12; -fx-font-size: 14px;"
                                maxWidth="Infinity" />
                        </children>
                    </VBox>
                </children>
            </HBox>

            <!-- Row 2: Tanggal Lahir -->
            <VBox spacing="8.0">
                <children>
                    <Label text="Tanggal Lahir *" textFill="#333333">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="tanggalLahirPicker" prefHeight="40.0" maxWidth="350.0"
                        promptText="Pilih tanggal lahir"
                        style="-fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;"
                        showWeekNumbers="false" />
                </children>
            </VBox>

            <!-- Row 3: Jenis Kelamin dan Agama -->
            <HBox spacing="20.0">
                <children>
                    <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Jenis Kelamin *" textFill="#333333">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Label>
                            <ComboBox fx:id="jkComboBox" prefHeight="40.0"
                                maxWidth="Infinity"
                                promptText="Pilih jenis kelamin"
                                style="-fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;"
                                visibleRowCount="5" />
                        </children>
                    </VBox>

                    <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Agama *" textFill="#333333">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Label>
                            <ComboBox fx:id="agamaComboBox" prefHeight="40.0"
                                maxWidth="Infinity"
                                promptText="Pilih agama"
                                style="-fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;"
                                visibleRowCount="6" />
                        </children>
                    </VBox>
                </children>
            </HBox>

            <!-- Information Note -->
            <VBox spacing="8.0">
                <children>
                    <Label text="* Field yang wajib diisi" textFill="#FF6B6B">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <Label text="NIDN harus berupa 10 digit angka unik" textFill="#666666">
                        <font>
                            <Font size="11.0" />
                        </font>
                    </Label>
                </children>
            </VBox>
        </children>
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <children>
            <Button fx:id="batalButton" onAction="#handleBatal" prefHeight="45.0" prefWidth="120.0"
                text="Batal"
                style="-fx-background-color: #EEEEEE; -fx-background-radius: 8; -fx-text-fill: #666666; -fx-font-weight: bold; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button fx:id="simpanButton" onAction="#handleSimpan" prefHeight="45.0"
                prefWidth="120.0"
                text="Simpan"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </children>
    </HBox>
</VBox>